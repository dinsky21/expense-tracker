<div
  class='row fs-3 justify-content-center text-center ms-3 fw-bold text-primary'
>請修改您的支出</div>
<div class='container d-flex justify-content-center mt-3'>

  <form class='col-md-8' action='/restaurants/' method='POST'>
    <div class='mb-3 row align-items-center ms-3'>
      <label
        for='name'
        class='col-sm-2 col-form-label text-end text-dark fs-5'
      >名稱</label>
      <div class='col-sm-8'>
        <input
          type='text'
          class='form-control'
          id='name'
          placeholder='name'
          name='name'
          required
        />
      </div>
    </div>
    <div class='mb-3 row align-items-center ms-3'>
      <label
        for='date'
        class='col-sm-2 col-form-label text-end text-dark fs-5'
      >日期</label>
      <div class='col-sm-8'>
        <input
          type='date'
          class='form-control'
          id='date'
          placeholder='花費'
          name='date'
          required
        />
      </div>
    </div>
    <div class='mb-3 row align-items-center ms-3'>
      <label
        for='category'
        class='col-sm-2 col-form-label text-end text-dark fs-5'
      >類別</label>
      <div class='col-sm-8'>
        <input
          type='text'
          class='form-control'
          id='category'
          placeholder='Category'
          list='categoryOptions'
          name='category'
          required
        />
        <datalist id='categoryOptions'>
          <option>交通</option>
          <option>飲食</option>
          <option>娛樂</option>
          <option>教育</option>
          <option>其他</option>
        </datalist>
      </div>
    </div>

    <div class='mb-3 row align-items-center ms-3'>
      <label
        for='cost'
        class='col-sm-2 col-form-label text-end text-dark fs-5'
      >金額</label>
      <div class='col-sm-8'>
        <input
          type='number'
          class='form-control'
          id='cost'
          placeholder='花費'
          name='cost'
          required
        />
      </div>
    </div>

    <div class='mb-3 row align-items-center ms-3'>
      <label
        for='description'
        class='col-sm-2 col-form-label text-end text-dark fs-5'
      >備註</label>
      <div class='col-sm-8'>
        <textarea
          class='form-control'
          id='description'
          rows='3'
          placeholder='description'
          name='description'
        ></textarea>

      </div>
    </div>
    <div class='row justify-content-end'>
      <div class='col-12 col-md-8 mt-3 me-2'>
        <button
          class='col-md-2 btn btn-primary btn-sm m-1 p-2 fw-bold fs-6'
          type='submit'
        >送出修改</button>
        <a
          href='/'
          class='col-md-2 btn btn-primary btn-sm m-1 p-2 text-center fs-6'
        >Back</a>

        <button
          type='delete'
          class='col-md-2 btn btn-danger btn-sm m-1 p-2 fw-bold fs-6'
        >刪除此項</button></div></div>

  </form>
</div>