<div class='row justify-content-center mt-5 bg-white w-75 h-75 mx-auto'>

  <form action='/users/login' method='POST' class='col-6 mt-5 pt-5'>
    <h1 class='text-center'><a
        class='btn border-0 text-black fs-1'
      >Login</a></h1>
    <div class="ms-3">
      {{> message}}
    </div>
    <div class='form-group mt-4'>
      <label class='fs-5 text-dark' for='email'>Email address</label>
      <input
        type='email'
        class='form-control mt-2 ms-3'
        id='email'
        name='email'
        aria-describedby='emailHelp'
        placeholder='Enter email'
        value='{{email}}'
      />

    </div>
    <div class='form-group mt-4'>
      <label class='fs-5 text-dark' for='password'>Password</label>
      <input
        type='password'
        class='form-control ms-3 mt-2'
        id='password'
        name='password'
        placeholder='Password'
      />
    </div>
    <div class='form-group mt-5'>
      <button
        type='submit'
        class='btn btn-primary fs-5 ms-3 w-100'
      >Login</button>
    </div>
    <a href="/auth/facebook" class="btn btn-info fs-5 ms-3 w-100 mt-3">facebook</a>
    <div class='lead mt-3'>
      <span class='fs-6 text-dark'>No account?<a
          href='/users/register'
          class='btn border-0 text-danger fs-6 mb-1'
        >Register</a></span>
    </div>
  </form>
</div>