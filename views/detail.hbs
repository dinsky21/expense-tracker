<div
	class='row fs-3 justify-content-center text-center ms-3 fw-bold text-primary'
>{{expenses.name}}的支出明細</div>
<div class='container d-flex justify-content-center mt-3'>

	<form
		class='col-md-8'
		action='/expenses/{{expenses._id}}?_method=PUT'
		method='POST'
	>
		<div class='mb-3 row align-items-center ms-3'>
			<label
				for='name'
				class='col-sm-2 col-form-label text-end text-dark fs-5'
			>名稱</label>
			<div class='col-sm-8'>
				<input
					type='text'
					class='form-control'
					id='name'
					placeholder='name'
					name='name'
					value='{{expenses.name}}'
					disabled
				/>
			</div>
		</div>
		<div class='mb-3 row align-items-center ms-3'>
			<label
				for='date'
				class='col-sm-2 col-form-label text-end text-dark fs-5'
			>日期</label>
			<div class='col-sm-8'>
				<input
					type='date'
					class='form-control'
					id='date'
					placeholder='日期'
					name='date'
					value='{{expenses.date}}'
					disabled
				/>
			</div>
		</div>
		<div class='mb-3 row align-items-center ms-3'>
			<label
				for='category'
				class='col-sm-2 col-form-label text-end text-dark fs-5'
			>類別</label>
			<div class='col-sm-8'>
				<select
					class='form-select'
					aria-label='Default select example'
					name='category'
					disabled
				>
					<option
						value='{{expenses.category}}'
					>{{expenses.category}}</option>

				</select></div>
		</div>

		<div class='mb-3 row align-items-center ms-3'>
			<label
				for='cost'
				class='col-sm-2 col-form-label text-end text-dark fs-5'
			>金額</label>
			<div class='col-sm-8'>
				<input
					type='number'
					class='form-control'
					id='cost'
					placeholder='花費'
					name='cost'
					value='{{expenses.cost}}'
					disabled
				/>
			</div>
		</div>

		<div class='mb-3 row align-items-center ms-3'>
			<label
				for='description'
				class='col-sm-2 col-form-label text-end text-dark fs-5'
			>備註</label>
			<div class='col-sm-8'>
				<textarea
					class='form-control'
					id='description'
					rows='3'
					placeholder='description'
					name='description'
					value='{{expenses.description}}'
					disabled
				>{{expenses.description}}</textarea>

			</div>
		</div>
		<div class='row justify-content-end'>
			<div class='col-12 col-md-8 mt-3 me-2'>
				<a
					href='/expenses/{{expenses._id}}/edit'
					class='col-3 btn btn-primary btn-sm m-1 p-2 fw-bold fs-6'
					type='submit'
				>修改支出</a>
				<a
					href='/'
					class='col-3 btn btn-primary btn-sm m-1 p-2 text-center fs-6'
				>Back</a>

	</form>
</div>